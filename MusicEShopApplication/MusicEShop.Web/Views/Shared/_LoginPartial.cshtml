@using Microsoft.AspNetCore.Identity
@using MusicEShop.Domain.Identity
@inject SignInManager<MusicEShopUser> SignInManager
@inject UserManager<MusicEShopUser> UserManager

<ul class="navbar-nav auth-navbar">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link profile-icon-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <img src="~/img/user-no-background.png" alt="User Profile" class="profile-icon">
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link logout-btn">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link auth-link" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link auth-link" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
