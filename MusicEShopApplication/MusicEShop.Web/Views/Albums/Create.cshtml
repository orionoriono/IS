@model MusicEShop.Domain.DomainModels.Album

@{
    ViewData["Title"] = "Create Album";
}

<div class="container mt-4">
    <h1 class="text-center">Create Album</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" enctype="multipart/form-data" class="shadow p-4 rounded bg-light">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter album title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Genre" class="form-label fw-bold"></label>
                    <input asp-for="Genre" class="form-control" placeholder="Enter album genre" />
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ReleaseDate" class="form-label fw-bold"></label>
                    <input asp-for="ReleaseDate" type="date" class="form-control" />
                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Details" class="form-label fw-bold"></label>
                    <textarea asp-for="Details" class="form-control" rows="3" placeholder="Enter album details"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="Enter album price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="CoverImage" class="form-label fw-bold">Upload Cover Image</label>
                    <input type="text" name="coverImage" class="form-control" />
                    <span asp-validation-for="CoverImage" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="ArtistId" class="form-label fw-bold">Select Artist</label>
                    <select asp-for="ArtistId" class="form-control" asp-items="ViewBag.ArtistId">
                        <option disabled selected>Choose an artist</option>
                    </select>
                    <span asp-validation-for="ArtistId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
