@model MusicEShop.Domain.DomainModels.Album

@{
    ViewData["Title"] = "Delete Album";
}

<div class="container mt-3">
    <div class="alert alert-warning text-center">
        <h4>Are you sure you want to delete this album?</h4>
    </div>

    <div class="card shadow-lg p-4 bg-light rounded">
        <h4 class="text-primary">Album Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Title:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Title)</dd>

            <dt class="col-sm-3 fw-bold">Genre:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>

            <dt class="col-sm-3 fw-bold">Release Date:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ReleaseDate)</dd>

            <dt class="col-sm-3 fw-bold">Price:</dt>
            <dd class="col-sm-9">$@Html.DisplayFor(model => model.Price)</dd>

            <dt class="col-sm-3 fw-bold">Cover Image:</dt>
            <dd class="col-sm-9">
                <img src="@Model.CoverImage" alt="Album Cover" class="img-fluid rounded shadow" style="max-width: 200px;" />
            </dd>

            <dt class="col-sm-3 fw-bold">Artist:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Artist.Name)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </div>
</div>
