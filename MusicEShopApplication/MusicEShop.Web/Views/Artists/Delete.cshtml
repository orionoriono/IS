@model MusicEShop.Domain.DomainModels.Artist

@{
    ViewData["Title"] = "Delete Artist";
}

<div class="container mt-3">

    <div class="alert alert-warning text-center">
        <h3>Are you sure you want to delete this artist?</h3>
    </div>

    <div class="card shadow-lg p-4 bg-light rounded">
        <h4 class="text-primary">Artist Details</h4>
        <hr />

        <dl class="row">
            <dt class="col-sm-3 fw-bold">Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3 fw-bold">Country:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Country)</dd>

            <dt class="col-sm-3 fw-bold">Genre:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Genre)</dd>

            <dt class="col-sm-3 fw-bold">Artist Image:</dt>
            <dd class="col-sm-9">
                <img src="@Model.ArtistImage" alt="Artist Image" class="img-fluid rounded shadow" style="max-width: 200px;" />
            </dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">Delete</button>
            </form>
            <a asp-action="Index" class="btn btn-secondary px-4">Back to List</a>
        </div>
    </div>
</div>
